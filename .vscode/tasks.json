{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "process",
      "label": "R: ASAN/USBAN",
      "command": "C:/Program Files/R/R-4.0.3/bin/x64/Rscript.exe",
      "linux": {
        "command": "/usr/lib/R/bin/Rscript"
      },
      "args": [
        "dev/check_asan.R"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": [
        {
          "owner": "R",
          "fileLocation": [
            "relative",
            "${workspaceFolder}/src"
          ],
          "pattern": {
            "regexp": "^\\**(.*):(\\d+):(\\d+):\\s+runtime (warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        },
        {
          "owner": "R",
          "severity": "warning",
          "pattern": [
            {
              "kind": "file",
              "regexp": ".*(NOTE|WARNING)",
              "file": 1
            },
            {
              "regexp": "(.*)",
              "message": 1,
            }
          ]
        },
        {
          "owner": "R",
          "severity": "error",
          "pattern": [
            {
              "kind": "file",
              "regexp": ".*(ERROR)",
              "file": 1
            },
            {
              "regexp": "(.*)",
              "message": 1,
            }
          ]
        }
      ]
    },
    {
      "type": "process",
      "label": "R: lint package",
      "command": "C:/Program Files/R/R-4.0.3/bin/x64/Rscript.exe",
      "linux": {
        "command": "/usr/lib/R/bin/Rscript"
      },
      "args": [
        "-e",
        "styler:::style_pkg(filetype = c('R', 'Rmd'))"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "type": "process",
      "label": "R: lint all code",
      "command": "${workspaceFolder}/dev/clang-format.exe",
      "linux": {
        "command": "/usr/bin/clang-format"
      },
      "args": [
        "-i",
        "--style=file",
        "src/*.cpp",
        "src/*.h"
      ],
      "dependsOn": "R: lint package",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "type": "process",
      "label": "R: test units",
      "command": "C:/Program Files/R/R-4.0.3/bin/x64/Rscript.exe",
      "linux": {
        "command": "/usr/lib/R/bin/Rscript"
      },
      "args": [
        "-e",
        "testthat::test_local(reporter = testthat::SummaryReporter)"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "type": "process",
      "label": "R: test coverage",
      "dependsOn": "R: test units",
      "command": "C:/Program Files/R/R-4.0.3/bin/x64/Rscript.exe",
      "linux": {
        "command": "/usr/lib/R/bin/Rscript"
      },
      "args": [
        "-e",
        "covr::package_coverage()"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "R: build current package",
      "command": "C:/Program Files/R/R-4.0.3/bin/x64/Rscript.exe",
      "linux": {
        "command": "/usr/lib/R/bin/Rscript"
      },
      "detail": "compiler: Rcmd",
      "args": [
        "-e",
        "devtools::load_all()"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
